<main class="main u-container">
  <%= render 'shared/flash_message' %>
  <h1 class="page-title">Create A New GoShadow Organization</h1>
  <p class="page-subtitle"></p>
  <section class="grid_primary">


  <%= form_for @organization, class: "form-horizontal" do |f| %>
    <%= f.fields_for :user_organizations do |user_org_form| %>
      <%= user_org_form.hidden_field :user_id, value: current_user.id %>
      <%= user_org_form.hidden_field :role, value: UserOrganization::COORDINATOR %>
      <%= user_org_form.fields_for :organization do |org_form| %>
        <div class="form__horizontal-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "Name your organization" %>
        </div>
        <div class="form__horizontal-group settings-avatar">
          <label>Your Logo</label>
          <%= f.fields_for :organization_logo do |org_logo| %>
            <%= org_logo.file_field :attachment, class: "file_upload" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <%= f.submit 'Create Organization', :class => "btn btn-primary" %>
  <% end %>
  </section>
  <aside class="grid_aside">
    <div class="sidebar sidebar__login u-card">
      <h3 class="sidebar__title">Sign up for a Free Shadowing Demo</h3>
      <p>
        Sample content explaining that Shadowing can be applied toany industry and organization, and to help get the most of GoShadow, sign up for a free demo with a Shadowing Specialist.<br>
        <a href="#">Sign Up Now »</a>
      </p>
    </div>
    <div class="sidebar sidebar__login u-card">
      <h3 class="sidebar__title">GoShadow for Enterprise</h3>
      <p>
        Sample content explaining that Shadowing can be applied toany industry and organization, and to help get the most of GoShadow, sign up for a free demo with a Shadowing Specialist.<br>
        <a href="#">Sign Up Now »</a>
      </p>
    </div>
  </aside>

</main>


