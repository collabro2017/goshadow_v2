<div class='person-container group-list-item'>
  <div class="group-list-item__header">
    <div class="reference-label js-group-toggle">
        <%= best_in_place group, :name, as: :input, activator: "#editGroup-#{group.id}" %>
    </div>
    <div class="reference-actions">
      <a href='#' id="<%= 'editGroup-' + group.id.to_s %>">
        <svg class="icon__edit" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 22"><defs><style>.cls-1{fill:none;stroke:#848484;stroke-width:0.89px;}</style></defs><title>icon_edit-gray-18</title><path class="cls-1" d="M14.08 4.05H1.85v16.5h15.61V7.68"/><path class="cls-1" d="M19.97 2.67l-9.75 9.92-1.8.62.87-1.9 9.65-9.67 1.03 1.03z"/></svg>
      </a>
      <%= link_to group_path(group), method: :delete, remote: true, class: 'delete-group', data: { confirm: "Are you sure you want to delete this Group?" } do %>
        <svg class="icon icon__delete-color" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 22"><path d="M17.65 2.76h-4V1.49A1.28 1.28 0 0 0 12.34.21H7.66a1.28 1.28 0 0 0-1.27 1.28v1.27h-4v.85h1l1.49 16.95a1.39 1.39 0 0 0 1.35 1.23h7.65a1.39 1.39 0 0 0 1.35-1.23l1.58-16.95h.84v-.85zM7.24 1.49a.43.43 0 0 1 .43-.43h4.68a.43.43 0 0 1 .43.43v1.27H7.24V1.49zm7.15 19a.53.53 0 0 1-.51.46H6.23a.53.53 0 0 1-.51-.46L4.15 3.61H16z"/><path d="M9.68 5.42h.85v13.61h-.85zM6.706 5.44l.85-.025.425 13.603-.85.027zM12.222 18.994l.408-13.61.85.025-.408 13.61z"/></svg>
      <% end %>
    </div>
  </div>
  <div class="group-list-item__references">
    <% group.references.each do |reference| %>
      <div class="group-list-item__reference">
        <%= reference.name %>
        <%= link_to 'âœ•', remove_reference_group_path(group, reference), method: :delete, remote: true, class: 'delete-link remove-shadower remove-ref-from-group', data: { confirm: "Are you sure you want remove this #{reference.type.downcase} from the group?" } %>
      </div>
    <% end %>
  </div>
</div>