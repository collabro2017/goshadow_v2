<% if @errors.present? %>
  
  $('.message-container').html("<%= escape_javascript(@errors) %>");

<% else %>

  $('#person_name').val('');
  var persons = $('.js-add-person-row');
  var lastPerson = persons[persons.length - 1];
  $(lastPerson).after("<%= escape_javascript( render 'organizations/person_row', person: @person) %>");
  $('.message-container').html('Person Created.');
  
<% end %>